<div class="container text-center">
  <div class="row justify-content-center">
    <div class="col-8 text-center py-5">
      <h1 class="title"> <%= @restaurant.name  %> </h1>
    </div>
    <div class="col-8">
      <p><%= @restaurant.address %></p>
      <p><%= @restaurant.category %></p>
      <p><%= @restaurant.phone_number %></p>

      <ul class="list-group py-2">
        <% @restaurant.reviews.each do |review| %>
          <li class="list-group-item">
            <strong>Coment√°rio:</strong> <%= review.content %>
            /<strong>Nota:</strong> <%= review.rating %>
            <%= link_to 'Remove',
                        review_path(review),
                        method: :delete,
                        data: { confirm: 'Are you sure?'} %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <%= link_to 'New Review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>
  <%= link_to 'Edit', edit_restaurant_path(@restaurant), class: 'btn btn-primary' %>
  <%= link_to 'Delete', @restaurant, method: :delete,data: { confirm: 'Are you sure?' } , class: 'btn btn-danger' %>
  <%= link_to 'All restaurants', restaurants_path, class: 'btn btn-primary' %>
</div>

