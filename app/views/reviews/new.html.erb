<div class="container">
  <h1 class="text-center">New review for <%= @restaurant.name %></h1>
  <div class="row justify-content-center">
    <div class="col-8">

      <%= simple_form_for [@restaurant, @review] do |f| %>

        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit 'Create Review', class: 'btn btn-primary' %>

      <% end %>
    
    </div>
  </div>
</div>
